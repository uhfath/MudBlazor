@namespace MudBlazor
@typeparam T
@inherits MudRawInput<T>

<MudInputControl
    Class="@InputControlClass"
    Style="@InputControlStyle"
    CounterText="@_counterText"
    Error="_hasErrors"
    ErrorText="@_errorText"
    HelperText="@HelperText"
    HelperTextOnFocus="HelperTextOnFocus"
    Label="@Label"
    Disabled="Disabled"
    Margin="Margin"
    FullWidth="FullWidth"
    Variant="Variant"    
    Required="Required"
	OnKeyDown="OnControlKeyDown"
	OnKeyUp="OnControlKeyUp"
	OnKeyPress="OnControlKeyPress"
	OnMouseDown="OnControlMouseDown"
	OnClick="OnControlClick"
	OnMouseUp="OnControlMouseUp"
	KeyDownPreventDefault="ControlKeyDownPreventDefault"
	KeyPressPreventDefault="ControlKeyPressPreventDefault"
	KeyUpPreventDefault="ControlKeyUpPreventDefault"
    MouseDownPreventDefault="ControlMouseDownPreventDefault"
    ClickPreventDefault="ControlClickPreventDefault"
    MouseUpPreventDefault="ControlMouseUpPreventDefault">
    <InputContent>
        @RenderBaseInput()
        @if (InputContent != null)
        {
            @InputContent(Value)
        }
    </InputContent>
</MudInputControl>
